{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types" : ["node"],
    "baseUrl": ".",
    "paths": {
      "common/*": [ "../common/*" ],
      "composables/*": [ "./src/composables/*" ],
      "router/*": [ "./src/router/*" ],
      "store/*": [ "./src/store/*" ],
      "style/*": [ "./src/style/*" ],
      "views/*": [ "./src/views/*" ],
      "@/*": [ "./src/*" ]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../common/**/*.ts",
    "../preload/contracts.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
